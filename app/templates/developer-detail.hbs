{{#each model2.users as |user|}}
<div class="page-header" id="userName"><span class="label label-default">{{user.name}}</span>
</div>
<span class="label label-success">Followers:{{user.followers}}</span>
<span class="label label-success">Following:{{user.following}}</span><br>
<h4>User Data:</h4>


<span class="label label-warning">User Bio:</span><div class="well well-sm"> {{user.bio}}</div>


<span class="label label-warning">Location:</span><div class="well well-sm"> {{user.location}}</div>


<span class="label label-warning">Email:</span><div class="well well-sm"> {{user.email}}</div>


<a href="{{user.html_url}}"><button class="btn btn-info">View Github Profile</button></a>
{{/each}}

<div class="row">
{{#each model.repos as |repo|}}
  <div class="col m4">
    <div class="card devlink-repo blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">  <strong>{{repo.name}}</strong>:</span> <hr>
        <div class='center'>
          <div class=' '>
           {{repo.description}}
          </div>
        </div>
          <div class='row'>
          <div class='col m6'>
            <a href='{{repo.html_url}}' target='_blank' class='btn btn-info'>Repo</a>
          </div>
          <div class='col m6'>
            <span class="new badge blue">Forks: {{repo.forks_count}}</span><br>
            <span class="new badge red">Watchers: {{repo.watchers_count}}</span><br>
            <span class="new badge green">Stars: {{repo.stargazers_count}}</span><br>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}
</div>
